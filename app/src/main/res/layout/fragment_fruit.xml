<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FruitFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/peachButton"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/watermelonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/peachImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/peachName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream4"
            android:text="복숭아"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/peachImage"
            app:layout_constraintTop_toBottomOf="@+id/peachImage" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/scdream4"
            android:text="가격 : 17,000 ~ 22,000원\n구매 가능 매장 : 2곳"
            android:textColor="#666666"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/peachName"
            app:layout_constraintTop_toBottomOf="@+id/peachName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="재고 10박스"
            android:textSize="14dp"
            android:fontFamily="@font/scdream4"
            app:layout_constraintStart_toEndOf="@+id/peachName"
            app:layout_constraintTop_toTopOf="@+id/peachName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/watermelonButton"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@+id/peachButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/melonImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:fontFamily="@font/scdream4"
            android:text="가격 : 17,000 ~ 22,000원\n구매 가능 매장 : 3곳"
            android:textColor="#666666"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/productName"
            app:layout_constraintTop_toBottomOf="@+id/productName" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream4"
            android:text="수박"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/melonImage"
            app:layout_constraintTop_toBottomOf="@+id/melonImage" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="재고 12개"
            android:textSize="14dp"
            android:fontFamily="@font/scdream4"
            app:layout_constraintStart_toEndOf="@+id/productName"
            app:layout_constraintTop_toTopOf="@+id/productName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blueberryButton"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginStart="188dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/watermelonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peachButton">

        <ImageView
            android:id="@+id/blueberryImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/blueberryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream4"
            android:text="블루베리"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/blueberryImage"
            app:layout_constraintTop_toBottomOf="@+id/blueberryImage" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/scdream4"
            android:text="가격 : 17,000 ~ 22,000원\n구매 가능 매장 : 2곳"
            android:textColor="#666666"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/blueberryName"
            app:layout_constraintTop_toBottomOf="@+id/blueberryName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="12dp"
            android:text="재고 6박스"
            android:textSize="14dp"
            android:fontFamily="@font/scdream4"
            app:layout_constraintStart_toEndOf="@+id/blueberryName"
            app:layout_constraintTop_toTopOf="@+id/blueberryName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grapeButton"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@+id/peachButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watermelonButton">

        <ImageView
            android:id="@+id/grapeImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:fontFamily="@font/scdream4"
            android:text="가격 : 17,000 ~ 22,000원\n구매 가능 매장 : 3곳"
            android:textColor="#666666"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/grapeName"
            app:layout_constraintTop_toBottomOf="@+id/grapeName" />

        <TextView
            android:id="@+id/grapeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/scdream4"
            android:text="포도"
            android:textColor="#000000"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/grapeImage"
            app:layout_constraintTop_toBottomOf="@+id/grapeImage" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="재고 15박스"
            android:textSize="14dp"
            android:fontFamily="@font/scdream4"
            app:layout_constraintStart_toEndOf="@+id/grapeName"
            app:layout_constraintTop_toTopOf="@+id/grapeName" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>